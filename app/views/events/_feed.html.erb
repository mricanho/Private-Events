<div class="column is-mobile is-half">
  <p class="control is-1 mb-2">
    <%= link_to 'Upcoming Events', new_event_path, class: "button is-dark" %>
  </p>
  <% @events.each do | event | %>
    <div class="box">
      <article class="media">
          <div class="media-left">
            <figure class="image is-64x64">
              <%= gravatar_image_tag(event.user.email, size: 64, alt: event.user.name) %>
            </figure>
          </div>
          <div class="media-content">
            <div class="content">     
              <strong><%= event.title %></strong><br />
              <small><%= event.user.username %></small><br/>         
              <p><%= event.event %></p>
              <small><%= content_tag(:p, "#{event.date.localtime.strftime("%a, %b %d, %Y")}  -  #{event.date.localtime.strftime("%I:%M %P")}", class: "date-time") %></small>
            </div>
            <% if user_signed_in? && current_user.id == event.user_id %>
              <nav class="level">
                <div class="level-left is-mobile">
                  <%= link_to event, class: "level-item" do %>
                    <span class="icon"><i class="fa fa-eye" aria-hidden="true"></i></span>
                  <% end %>
                  <%= link_to edit_event_path(event), class: "level-item" do %>
                    <span class="icon"><i class="fa fa-edit" aria-hidden="true"></i></span>
                  <% end %>
                  <%= link_to event, method: :delete, data: { confirm: "Are you sure you want to delete this event?" } do %>
                      <span class="icon"><i class="fa fa-trash-o" aria-hidden="true"></i></span>
                  <% end %>
                </div>
              </nav>
            <% end %>
          </div>
      </article>
    </div>
  <% end %>
</div>
